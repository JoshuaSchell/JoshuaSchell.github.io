---
interface Props {
  title: string;
  description: string;
  href: string;
  date: Date;
}

const { title, description, href, date } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a
  href={href}
  class="block group p-4 -mx-4 rounded-lg hover:bg-muted/50 transition-colors"
>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1 mb-1">
    <h3 class="inline-block font-medium group-hover:text-accent transition-colors link-underline">
      {title}
    </h3>
    <time class="text-sm text-foreground/60" datetime={date.toISOString()}>
      {formattedDate}
    </time>
  </div>
  <p class="text-sm text-foreground/60">{description}</p>
</a>
